//一个task可以对应多个screen
{
    //登录
    "login":[{"screen":"登录","operates":[
        {"key":"手机号","value":"$phone_num"},{"key":"密码","value":"$pwd"},{"key":"登陆","value":""},
        {"key":"wait-next-screen","value":"发现"}]}],
    //退出登录
    "logout":[{"screen":"设置","operates":[{"key":"切换帐号","value":""},{"key":"children.pop-window.退出登录","value":""},
        {"key":"wait-next-screen","value":"login"}]}],
    //领取奖励
    "get-award":[{"screen":"我","operates":[{"key":"drag-up","value":""},{"key":"领取奖励","value":""}]}],
    //建立快速牌局-现金
    "make-quick-cash":[
        {"screen":"快速牌局","operates":[{"key":"我要组局","value":""},{"key":"wait-next-screen","value":"建立牌局"}]},
        {"screen":"建立牌局","operates":[{"key":"普通牌局","value":""},{"key":"牌局名称","value":"$name"},
            {"key":"player-num","value":"$cash-player-num"},{"key":"盲注设置","value":"$blind"},
            {"key":"控制带入","value":"$limit-buyin"},{"key":"牌局时长","value":"$duration"},
            {"key":"现在开局","value":""},{"key":"wait-next-screen","value":"快速普通局"}
        ]},
        {"screen":"快速普通局","operates":[
            {"key":"开局","value":""},{"key":"children.pop-window.确定","value":""},
            {"key":"wait-next-screen","value":"nine-game"}
        ]}
    ],
    //建立快速牌局-sng
    "make-quick-sng":[
        {"screen":"快速牌局","operates":[{"key":"我要组局","value":""},{"key":"wait-next-screen","value":"建立牌局"}]},
        {"screen":"建立牌局","operates":[{"key":"SNG牌局","value":""},{"key":"牌局名称","value":"$name"},
            {"key":"SNG-player-num","value":"$sng-player-num"},{"key":"SNG-控制报名","value":"$limit-sign-up"},
            {"key":"SNG-现在开局","value":""},{"key":"wait-next-screen","value":"快速SNG局"}
        ]}
    ],
    //建立俱乐部牌局-现金
    "make-club-cash":[],
    //建立俱乐部牌局-sng
    "make-club-sng":[],
    //验证加入牌局请求
    "accept":[],
    //---------------------------------------------------------------------------
    //here 各个一级、二级页面的跳转work flow. 因为要执行的任务不可能在恰好与任务开始界面一致
    "登录":{
        "goto-注册":[{"key":"注册","value":""}]
    },
    "注册":{
        "goto-登录":[{"key":"取消","value":""}]
    },
    "发现":{
        "goto-消息":[{"key":"消息","value":""}],
        "goto-快速牌局":[{"key":"快速牌局","value":""}],
        "goto-战绩":[{"key":"战绩","value":""}],
        "goto-我":[{"key":"我","value":""}]
    },
    "消息":{
        "goto-发现":[{"key":"发现","value":""}],
        "goto-快速牌局":[{"key":"快速牌局","value":""}],
        "goto-战绩":[{"key":"战绩","value":""}],
        "goto-我":[{"key":"我","value":""}]
    },
    "快速牌局":{
        "goto-发现":[{"key":"发现","value":""}],
        "goto-消息":[{"key":"消息","value":""}],
        "goto-战绩":[{"key":"战绩","value":""}],
        "goto-我":[{"key":"我","value":""}]
    },
    "战绩":{
        "goto-发现":[{"key":"发现","value":""}],
        "goto-消息":[{"key":"消息","value":""}],
        "goto-快速牌局":[{"key":"快速牌局","value":""}],
        "goto-我":[{"key":"我","value":""}]
    },
    "我":{
        "goto-发现":[{"key":"发现","value":""}],
        "goto-消息":[{"key":"消息","value":""}],
        "goto-快速牌局":[{"key":"快速牌局","value":""}],
        "goto-战绩":[{"key":"战绩","value":""}],
        "goto-设置":[{"key":"设置","value":""}]
    },
    "设置":{
        "goto-我":[{"key":"我","value":""}],
        "goto-登录":[{"key":"切换帐号","value":""},{"key":"children.pop-window.退出登录","value":""}]
    }
}
